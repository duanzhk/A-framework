{
    "extends": "./temp/tsconfig.cocos.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",// 只编译 src 目录
        "emitDecoratorMetadata": true, // 启用元数据反射
        "baseUrl": "./static/assets", // paths的起始目录
        "paths": {
            "@mflow/api": ["core/index"],
            "@mflow/libs": ["libs/index"],
            "@mflow/utils": ["utils/index"],
        },
        "types": [
            "node",
            "@cocos/creator-types/editor",
        ]
    },
    "exclude": [
        "static/assets/**/*" // 排除 static/assets 目录
    ],
}